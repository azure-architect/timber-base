<header class="bg-white shadow-sm" x-data="{ /* Alpine.js data here */ }">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center py-6">
        <div class="flex items-center">
            <!-- Display site logo or name -->
            {% if site.logo %}
                <img src="{{ site.logo }}" alt="{{ site.name }}" class="h-8 w-auto sm:h-10">
            {% else %}
                <p class="text-2xl font-extrabold capitalize">{{ site.name }}</p>
            {% endif %}
        </div>

        <!-- Placeholder for future menu on the right -->
        <!-- Display WordPress 'main' menu -->
        <div class="flex items-center">
            {% for item in menu.items %}
                <a href="{{ item.link }}" class="text-base pe-2 font-medium text-gray-500 hover:text-gray-900">
                    {{ item.title }}
                </a>
            {% endfor %}
        </div>
    </nav>
</header>