<style>
    /* Custom CSS for Swup transitions */
    .transition-fade {
        transition: opacity 5.5s ease-in-out;
    }
</style>

<div x-data="{ activeTab: 'tab1' }" class="p-6">
    <!-- Tabs -->
    <ul class="flex border-b">
        <li class="mr-1">
            <button
                    @click="activeTab = 'tab1'"
                    :class="{ 'bg-blue-500 text-white': activeTab === 'tab1', 'bg-gray-100 text-blue-500': activeTab !== 'tab1' }"
                    class="inline-block py-2 px-4 focus:outline-none">
                Tab 1
            </button>
        </li>
        <li class="mr-1">
            <button
                    @click="activeTab = 'tab2'"
                    :class="{ 'bg-blue-500 text-white': activeTab === 'tab2', 'bg-gray-100 text-blue-500': activeTab !== 'tab2' }"
                    class="inline-block py-2 px-4 focus:outline-none">
                Tab 2
            </button>
        </li>
        <li class="mr-1">
            <button
                    @click="activeTab = 'tab3'"
                    :class="{ 'bg-blue-500 text-white': activeTab === 'tab3', 'bg-gray-100 text-blue-500': activeTab !== 'tab3' }"
                    class="inline-block py-2 px-4 focus:outline-none">
                Tab 3
            </button>
        </li>
    </ul>

    <!-- Tab Contents with Alpine.js transitions -->
    <div class="border-l border-r border-b rounded-b py-4">
        <div x-show="activeTab === 'tab1'"
             x-transition:enter="transition ease-in-out duration-700"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="transition ease-in-out duration-700"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             class="tab-content">
            <p>Content for Tab 1</p>
        </div>
        <div x-show="activeTab === 'tab2'"
             x-transition:enter="transition ease-in-out duration-700"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="transition ease-in-out duration-700"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             class="tab-content">
            <p>Content for Tab 2</p>
        </div>
        <div x-show="activeTab === 'tab3'"
             x-transition:enter="transition ease-in-out duration-700"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="transition ease-in-out duration-700"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             class="tab-content">
            <p>Content for Tab 3</p>
        </div>
    </div>
</div>







<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('tabs', () => ({
            activeTab: 'tab1',
        }));
    });

    document.addEventListener('DOMContentLoaded', () => {
        const swup = new Swup();
    });
</script>
