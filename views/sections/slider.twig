<style>
    .photo-container {
        width: 1080px;
        height: 600px;
        overflow: hidden;
    }

    .photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

<div x-data="photoSlider()" x-init="init">
    <div class="slider">
        <div x-show="photo" class="photo-container">
            <img :src="photo.url" :alt="photo.title" class="photo">
            <h3 x-text="photo.title"></h3>
        </div>
        <button @click="fetchPhoto">Next Photo</button>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/alpinejs@2.x.x/dist/alpine.js"></script>


<script>
    function photoSlider() {
        return {
            photo: null,
            interval: null,

            init() {
                this.fetchPhoto();
                this.startAutoRotate();
            },

            fetchPhoto() {
                fetch('https://jsonplaceholder.typicode.com/photos/' + this.getRandomPhotoId())
                    .then(response => response.json())
                    .then(data => {
                        this.photo = data;
                    })
                    .catch(error => {
                        console.error('Error fetching photo:', error);
                    });
            },

            getRandomPhotoId() {
                return Math.floor(Math.random() * 5000) + 1;
            },

            startAutoRotate() {
                this.interval = setInterval(() => {
                    this.fetchPhoto();
                }, 3000);
            },

            stopAutoRotate() {
                clearInterval(this.interval);
            }
        }
    }
</script>

