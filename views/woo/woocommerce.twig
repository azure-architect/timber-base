{% extends "base.twig" %}

{% block content %}
    <div class="shop-page p-4">
        <h1 class="shop-page-title text-2xl font-semibold mb-4">Shop</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            {% for product in products %}
                <div class="bg-white p-4 rounded-lg shadow-md">
                    <h2 class="text-xl font-semibold mb-2">{{ product.title }}</h2>
                    <p class="text-lg font-medium text-blue-600">${{ product.meta('_sale_price') }}</p>
                    <a href="{{ product.link }}" class="block mt-2 text-sm text-gray-500 hover:text-blue-600">View Product</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
