{# taxonomy-product_cat.twig #}
<div class="container mx-auto px-4">
    <h1 class="text-2xl font-bold my-4">{{ term.name }}</h1>
    <div class="grid grid-cols-3 gap-4">
        {% for post in posts %}
            <div class="border p-4">
                <h2 class="text-xl font-semibold">{{ post.title }}</h2>
                <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}" class="w-full h-auto">
                <p class="my-2">{{ post.get_preview | raw }}</p>
                <a href="{{ post.link }}" class="inline-block bg-blue-500 text-white px-4 py-2">View Product</a>
            </div>
        {% endfor %}
    </div>
</div>
