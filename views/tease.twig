<article class="tease tease-{{post.type}}" id="tease-{{post.id}}">
	{% block content %}
		<h2 class="h2 text-xl"><a class="text-purple-600" href="{{post.link}}">{{post.title}}</a></h2>
		<p>{{ post.excerpt }}</p>
		{% if post.thumbnail %}
			<img src="{{post.thumbnail.src}}" />
		{% endif %}
	{% endblock %}
</article>