

{#{{ shortcode('[show_methods class="Timber"]') }}#}



{% set args = {
    post_type: " product "
}%}
{% set products = get_posts(args) %}
<div class="bg-white">
    <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
        <h2 id="products-heading" class="sr-only">Products</h2>
        <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
            {% for product in products %}
                {% set product_id = product.id %}
                {% set thumbnail_id = product.meta('_thumbnail_id') %}
                {% set price = product.meta('_regular_price') %}
                {% set image = get_attachment(thumbnail_id) %}
                {% set state = product.link %}
                {{ include('debug.twig') }}

                <a href="{{ product.link }}" class="group">
                    <div class="aspect-h-1 aspect-square w-full overflow-hidden rounded-lg sm:aspect-h-3 sm:aspect-w-2">
                        <img src="{{ image.guid }}" alt="{{ product.title }}" class="h-full w-full object-cover object-center group-hover:opacity-75">
                    </div>
                    <div class="mt-4 flex items-center justify-between text-base font-medium text-gray-900">
                        <h3>{{ product.title }}</h3>
                        <p>${{ price }}</p>
                    </div>
                    <p class="mt-1 text-sm italic text-gray-500">3 sizes available</p>
                </a>
            {% endfor %}

        </div>
    </div>
</div>
